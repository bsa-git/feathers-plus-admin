{
  "root": true,
  "env": {
    "browser" : true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "parser": "./node_modules/babel-eslint/lib",
  "extends": "eslint:recommended",
  "rules": {
    "no-console": "off",
    "no-undef":"off",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
